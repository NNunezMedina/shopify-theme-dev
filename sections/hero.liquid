<script>
  // Función para cambiar el texto del h1 y h2 dependiendo del tamaño de la pantalla
  function updateHeadingText() {
    const h1Heading = document.querySelector('.text-content h1'); // Selecciona el h1
    const h2Heading = document.querySelector('.text-content h2'); // Selecciona el h2

    if (window.innerWidth <= 1339) {
      h1Heading.textContent = 'Ultimate Cold'; // Texto para el h1 en pantallas pequeñas
      h2Heading.textContent = 'Therapy Solution'; // Texto para el h2 en pantallas pequeñas
    } else {
      h1Heading.textContent = 'Transform Your Recovery with the'; // Texto para el h1 en pantallas grandes
      h2Heading.textContent = 'Ultimate Water Chiller'; // Texto para el h2 en pantallas grandes
    }
  }

  // Llama a la función inicialmente para establecer el texto correcto al cargar la página
  updateHeadingText();

  // Escucha el evento de cambio de tamaño de ventana y ejecuta la función
  window.addEventListener('resize', updateHeadingText);
</script>



